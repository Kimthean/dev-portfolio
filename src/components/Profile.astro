---
import { Picture } from "astro:assets";
import ProfilePicture from "../assets/profile.png";

const profile = {
    name: "Kea Kimthean",
    title: "Software Engineer",
    location: "Phnom Penh, Cambodia",
    description:
        "Full-Stack Developer with experience building production payment systems and web applications. Delivered secure, scalable solutions using modern JavaScript frameworks and cloud technologies. Proven ability to work independently and deliver high-quality software on schedule.",
};
---

<div
    class="flex flex-col gap-6 items-center text-center sm:items-start sm:text-left"
>
    <div class="flex flex-col sm:flex-row gap-4 sm:items-center">
        <Picture
            src={ProfilePicture}
            formats={["webp"]}
            width={96}
            height={96}
            loading="lazy"
            alt={"Profile picture " + profile.name}
            title={profile.name}
            class="w-24 h-24 rounded-xl object-cover mx-auto sm:mx-0"
        />

        <div>
            <h1 class="text-4xl font-bold">Kea Kimthean</h1>

            <p class="text-lg text-gray-600">Phnom Penh, Cambodia</p>
        </div>
    </div>

    <div class="mt-4 text-base text-gray-400">
        <section class="mt-8">
            <h2 class="text-2xl font-semibold mb-2">About Me</h2>
            <p>
                Full-Stack Developer with experience building production payment systems and web applications. 
                I specialize in delivering secure, scalable solutions using modern JavaScript frameworks and cloud technologies, 
                with proven ability to work independently and deliver high-quality software on schedule.
            </p>
            <h3 class="text-xl font-semibold mt-6 mb-2">
                Technical Skills
            </h3>
            <ul class="list-disc list-inside">
                <li>
                    <strong>Frontend:</strong> React, React Native (Expo), Next.js, AstroJS, TailwindCSS
                </li>
                <li>
                    <strong>Backend:</strong> NestJS, Hono, JavaScript, TypeScript, Golang
                </li>
                <li>
                    <strong>Database & Tools:</strong> PostgreSQL, Prisma, Redis, Docker, Turborepo, GitHub Actions
                </li>
            </ul>
        </section>
    </div>
</div>
